{
  "name": "@2players/ft",
  "description": "A simple framework in EC pattern for HTML5 marketing pages.",
  "version": "0.10.0",
  "repository": "2players/ft",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.js' 'test/**/*.js'",
    "test": "ava",
    "docs": "esdoc",
    "docs:watch": "nodemon --watch src --exec 'npm run docs'",
    "code-quality": "npm run lint && npm run test",
    "cleanup": "rm -rf dist",
    "transpile": "babel src -d dist",
    "copy-files": "cp -r package.json README.md dist",
    "build": "npm run cleanup && npm run transpile && npm run copy-files",
    "build:watch": "nodemon --watch src --exec 'npm run build'",
    "release": "npm run code-quality && npm run build && cd dist && npm publish"
  },
  "files": [
    "*"
  ],
  "sideEffects": false,
  "main": "index.js",
  "keywords": [
    ""
  ],
  "dependencies": {
    "es6-tween": "^5.5.10",
    "eventemitter3": "^4.0.0",
    "fast-glob": "^3.1.0",
    "pixi-sound": "^3.0.3",
    "pixi-spine": "2.0.5",
    "pixi.js-legacy": "^5.1.5",
    "qs": "^6.9.0",
    "string-length": "^3.1.0",
    "vconsole": "^3.3.4",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "^7.6.2",
    "ava": "2.4.0",
    "babel-eslint": "^10.0.3",
    "core-js": "3",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-ava": "^9.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "esm": "^3.2.25",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2"
  },
  "ava": {
    "require": [
      "./test/_register.js",
      "esm"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
